<div class="container-fluid">
<div class="body-title">
  <h1 class="text-center ">Contact</h1>
</div>
<div class="row">
  <div class="my-form">

    <%= form_tag("/send_mail", method: "post", role: 'form') do%>

      <div class="field control-label form-group" >
        <p><%= label_tag :name %></p>
        <p><%= text_field_tag :name, nil, required: '', class: 'form-control'  %></p>
      </div>

      <div class="field control-label form-group" >
        <p><%= label_tag :email %></p>
        <p><%= text_field_tag :email, nil, required: '', class: 'form-control' %></p>
      </div>
        
      <div class="field control-label form-group">
        <p><%= label_tag :message %></p>
        <p><%= text_area_tag :message, nil, class: 'form-control', rows: '8' %></p>
      </div>

        </br>

      <div class="actions form-group">
        <p><%= submit_tag 'Send Message', class: "btn btn-default" %></p>
      </div>
      
    <% end %>
  </div>
</div>
</div>