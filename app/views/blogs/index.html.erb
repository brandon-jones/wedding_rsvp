<h1>Listing Blogs</h1>
<%= paginate @blogs %>
<%= link_to('Admin', manage_blogs_path, class: 'black') %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Created On</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.created_at.to_formatted_s(:short) %></td>
        <td><%= blog.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
