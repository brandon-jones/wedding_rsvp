
<div id="current_weather">
	<div class="row-fluid">
		<div class="span2">
			<div class="weather-info">
				<b>Current</b>
				</br>
				<%= image_tag(@current_weather['weatherIconUrl'][0]['value']) %>
				</br>
				Tempature:<%= @current_weather['temp_F'] %>
				</br>
				<%= @current_weather['description'] %>
				</br>
				Humidity: <%= @current_weather['humidity'] %>
				</br>
				Wind Speed: <%= @current_weather['windspeedMiles'] %>
				</br>
				Wind Direction: <%= @current_weather['winddir16Point'] %>
			</div>
		</div>

			<% @weather_forcast.each do |forcast| %>

			<div class="span2">
				<div class="weather-info">
					<b><%= forcast['date'] %></b>
					</br>
					<%= image_tag(forcast['weatherIconUrl'][0]['value']) %>
					</br>
					<%= forcast['description'] %>
					</br>
					High: <%= forcast['tempMaxF'] %>
					</br>
					Low: <%= forcast['tempMinF'] %>
					</br>
					Wind Speed: <%= forcast['windspeedMiles'] %>
					</br>
					Wind Direction: <%= forcast['winddir16Point'] %>
				</div>
			</div>
			<% end %>
	</div>
</div>